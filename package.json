{
  "name": "hyperdoc",
  "version": "0.0.1",
  "description": "Hyperdoc - A Serverless Content Repository",
  "author": "Ezequiel Foncubierta <ezequiel.foncubierta@gmail.com>",
  "private": true,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hyperdoc/hyperdoc.git"
  },
  "bugs": {
    "url": "https://github.com/hyperdoc/hyperdoc/issues"
  },
  "homepage": "https://hyperdoc.io",
  "license": "Apache-2.0",
  "dependencies": {
    "source-map-support": "^0.5.0"
  },
  "devDependencies": {
    "@types/node": "^8.10.13",
    "codecov": "^3.0.2",
    "mocha": "^5.1.1",
    "nyc": "^11.7.3",
    "ts-loader": "^2.3.7",
    "serverless-webpack": "^4.0.0",
    "ts-node": "^6.0.3",
    "typescript": "^2.5.2",
    "webpack": "^3.6.0"
  },
  "scripts": {
    "install:core": "cd core && npm install && cd ..",
    "install:backend": "cd backend && npm install && cd ..",
    "install:api": "cd api && npm install && cd ..",
    "install:modules": "npm run install:core && npm run install:backend && npm run install:api",
    "install:root": "npm install",
    "install:all": "npm run install:root && npm run install:modules",
    "clean:core": "cd core && npm run clean && cd ..",
    "clean:api": "cd api && npm run clean && cd ..",
    "clean:backend": "cd api && npm run clean && cd ..",
    "clean:modules": "npm run clean:core && npm run clean:backend && npm run clean:api",
    "clean:root": "rm -rf .nyc_output coverage node_modules",
    "clean:all": "npm run clean:root && npm run clean:modules",
    "test:core": "./node_modules/.bin/mocha -r ts-node/register core/test/**/*.spec.ts",
    "test:backend": "./node_modules/.bin/mocha -r ts-node/register backend/test/**/*.spec.ts",
    "test:api": "./node_modules/.bin/mocha -r ts-node/register api/test/**/*.spec.ts",
    "test:all": "./node_modules/.bin/mocha -r ts-node/register {core,backend,api}/test/**/*.spec.ts",
    "test": "./node_modules/.bin/nyc -e '.ts' --r html -r lcov -r text npm run test:all",
    "codecov": "./node_modules/.bin/codecov"
  },
  "nyc": {
    "exclude": [
      "{core,backend,api}/test/**/*.ts"
    ],
    "include": [
      "{core,backend,api}/src/**/*.ts"
    ],
    "all": true
  }
}
