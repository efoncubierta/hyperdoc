  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.5",
    "@types/aws-sdk": "^2.7.0",
    "@types/chai": "^4.1.3",
    "@types/chai-as-promised": "^7.1.0",
    "@types/deepmerge": "^2.1.0",
    "@types/graphql": "^0.13.1",
    "@types/mocha": "^5.2.0",
    "@types/node": "^8.10.13",
    "@types/uuid": "^3.4.3",
