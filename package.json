{
  "name": "hyperdoc",
  "version": "0.0.1",
  "description": "Hyperdoc - A Serverless Content Repository",
  "author": "Ezequiel Foncubierta <ezequiel.foncubierta@gmail.com>",
  "private": true,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hyperdoc/hyperdoc.git"
  },
  "bugs": {
    "url": "https://github.com/hyperdoc/hyperdoc/issues"
  },
  "homepage": "https://hyperdoc.io",
  "license": "Apache-2.0",
  "dependencies": {},
  "devDependencies": {
    "codecov": "^3.0.2",
    "mocha": "^5.1.1",
    "nyc": "^11.7.3",
    "ts-node": "^6.0.3",
    "typescript": "^2.8.3"
  },
  "scripts": {
    "install_core": "cd core && npm install && cd ..",
    "install_api": "cd api && npm install && cd ..",
    "install_modules": "npm run install_core && npm run install_api",
    "test:unit": "./node_modules/.bin/mocha -r ts-node/register {api,core}/test/**/*.spec.ts",
    "test": "./node_modules/.bin/nyc -e '.ts' --r html -r lcov -r text npm run test:unit",
    "codecov": "./node_modules/.bin/codecov"
  },
  "nyc": {
    "exclude": ["{api,core}/test/**/*.ts", "build"]
  }
}
